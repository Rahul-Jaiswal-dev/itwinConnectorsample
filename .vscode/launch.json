    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/lib/Main.js",
            
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
        },
        {
            "name": "Debug Tests",
            "cwd": "${workspaceFolder}",
            "type": "pwa-node",
            "request": "launch",
            "runtimeExecutable": "npm",
           
            "outFiles": [
              "${workspaceFolder}/lib/**/*.js"
            ]
        },       
    ]
}