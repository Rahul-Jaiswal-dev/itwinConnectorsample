    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}/COBie-connector/lib/Main.js",
             "args": [  "-- --output=debug.bim"],
            "outFiles": [
                "${workspaceFolder}/COBie-connector/lib/**/*.js"
            ],
            "skipFiles": [
                "<node_internals>/**"
            ],
        },
        {
            "name": "Debug Tests",
            "cwd": "${workspaceFolder}/COBie-connector/src/test/unit/",
            "type": "pwa-node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
              "test"
            ],
            "outFiles": [
              "${workspaceFolder}/lib/**/*.js"
            ]
        },       
    ]
}